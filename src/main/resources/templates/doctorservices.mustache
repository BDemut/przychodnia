{{>prezentacjaPoczatek }}
    <button onclick="search('services')">szukaj</button><br>
    <strong>ŚWIADCZENIA</strong>
    <table>
        <tr>
            <td>ID</td>
            <td>Nazwa</td>
            <td>Cena (zł)</td>
            <td>Czas trwania (min)</td>
        </tr>
        {{{table}}}
    </table><br>
    <label id="actionLabel">Dodaj:</label><label id="editedId"></label><br>
    <form>
        <label for="name">Nazwa</label><br>
        <input type="text" id="name" name="name"><br>
        <label for="price">Cena (zł)</label><br>
        <input type="text" id="price" name="price"><br>
        <label for="duration">Czas trwania (min)</label><br>
        <input type="text" id="duration" name="duration"><br>
    </form>
    <button id="addOrEditButton" type="button" onclick="clickAddOrEdit()">DODAJ</button>
{{>koniec}}

<script src="scripts.js"></script>


<script>
function clickAddOrEdit() {
    addOrEdit(
        'services',
        JSON.stringify({
               name: document.getElementById('name').value,
               price: document.getElementById('price').value,
               duration: document.getElementById('duration').value
            }),
        JSON.stringify({
                id: document.getElementById('editedId').innerText,
                name: document.getElementById('name').value,
                price: document.getElementById('price').value,
                duration: document.getElementById('duration').value
            })
        );
}

function clickRemove(removedId) {
    remove('services', JSON.stringify({
        id: removedId
      }));
}
</script>